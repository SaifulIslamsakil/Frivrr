*{
	margin:0px;
	padding:0px;
	box-sizing:border-box;
}
.nevasition-var{
	background-color:green;
	width:100%;
	height:150px;
	
}
.menu{
	
}
.heading{
	display:inline-block;
	color:white;
	font-size:40px;
	text-transform:uppercase;
	margin:40px;
	font-weight:bolder;
	
}
ul li{
	display:inline-block;
	color:white;
	font-size:25px;
	float:right;
	margin:20px;
	padding:10px;
	text-transform:uppercase;
	list-style:none;
}
.join{
	border: 2px white solid;
	text-transform:lowercase;
}
ul li:hover{
	text-decoration:underline;
	text-decoration-color:white;
	color:yellow;
	
}
ul li .join:hover{
	background-color:red;
}
.continer{
	width:100%;
	height:500px;
	background-color:green;
}
.name{
	color:white;
	padding-top:100px;
	padding-left:40px;
	font-size:50px;
	text-transform:capitalize;
	line-height:60px;
}
input{
	width:600px;
	height:30px;
	margin-left:40px;
	
}
.sreach{
	width:100px;
	height:30px;
	background-color:red;
	
	color:white;
}